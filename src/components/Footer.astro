---
import { Icon } from 'astro-icon/components';
import logo from '~/images/devghuraba-hor-white.webp';

interface Product {
  name: string;
  url: string;
}

const products: Product[] = [
  {
    name: 'Warsya - Kasir Bengkel',
    url: 'https://warsya.id',
  },
  {
    name: 'Randori - Kasir Laundry',
    url: 'https://randori.id',
  },
  {
    name: 'Reparación - Kasir Servis Elektronik',
    url: 'https://reparacion.my.id',
  },
  {
    name: 'Thoqo - Kasir Toko',
    url: 'https://thoqo.my.id',
  },
  {
    name: 'Bistro - Kasir Kuliner',
    url: 'https://bistro.my.id',
  },
  {
    name: 'RentTap - Kasir Rental',
    url: 'https://renttap.my.id',
  },
];

const message = encodeURIComponent('Halo Devghuraba Teknologi, Saya ingin konsultasi untuk bisnis saya');
---
<footer id="kontak" class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-4 gap-8">
      {/* Company Info */}
      <div class="md:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <img src={logo.src} alt="Logo Devghuraba Teknologi" height="36" width="288" />
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed max-w-md">
          Menjadi partner transformasi digital terpercaya untuk UMKM dan bisnis di Indonesia
          dengan solusi aplikasi yang inovatif dan terjangkau.
        </p>

        {/* Contact Info */}
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <Icon name="tabler:map-pin" class="h-5 w-5 text-primary" />
            <span class="text-sm">Bekasi, Indonesia</span>
          </div>
          <div class="flex items-center gap-3">
            <Icon name="tabler:phone" class="h-5 w-5 text-primary" />
            <span class="text-sm">+62 896-9925-0746</span>
          </div>
          <div class="flex items-center gap-3">
            <Icon name="tabler:mail" class="h-5 w-5 text-primary" />
            <span class="text-sm">info@devghuraba.id</span>
          </div>
        </div>
      </div>

      {/* Products */}
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Produk Kami</h3>
        <ul class="space-y-2">
          {products.map(product => (
            <li>
              <a href={`${product.url}?utm_source=devghuraba.id`} target="_blank" class="text-sm hover:text-primary transition-colors">{product.name}</a>
            </li>
          ))}
        </ul>
      </div>

      {/* Company */}
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Perusahaan</h3>
        <ul class="space-y-2">
          <li><a href="#tentang" class="text-sm hover:text-primary transition-colors">Tentang Kami</a></li>
          <li><a href="#" class="text-sm hover:text-primary transition-colors">Blog</a></li>
          <!-- <li><a href="#" class="text-sm hover:text-primary transition-colors">Kebijakan Privasi</a></li>
          <li><a href="#" class="text-sm hover:text-primary transition-colors">Syarat & Ketentuan</a></li> -->
        </ul>
      </div>
    </div>

    <div class="my-8 bg-gray-700" />

    {/* Quick Contact */}
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-white mb-4 text-center">Hubungi Kami Sekarang</h3>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={`https://wa.me/6289699250746?text=${message}`} target="_blank" class="flex items-center justify-center gap-2 rounded px-4 h-10 bg-green-600 hover:bg-green-700 text-white">
          <Icon name="tabler:message" class="h-5 w-5" />
          WhatsApp: +62 896-9925-0746
        </a>
        <a href="mailto:info@devghuraba.id" class="flex items-center justify-center gap-2 rounded bg-white px-4 h-10 border border-primary text-primary hover:bg-primary hover:text-white">
          <Icon name="tabler:mail" class="h-5 w-5" />
          Email: info@devghuraba.id
        </a>
      </div>
    </div>

    <div class="my-8 bg-gray-700" />

    {/* Bottom Section */}
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="text-sm text-gray-400 mb-4 md:mb-0">
        © {new Date().getFullYear()} PT. Devghuraba Teknologi Indonesia. All rights reserved.
      </div>

      {/* Social Media */}
      <div class="flex items-center gap-4">
        <span class="text-sm text-gray-400">Follow us:</span>
        <div class="flex gap-3">
          <a href="https://www.instagram.com/devghuraba.id" target="_blank" class="w-8 h-8 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="Instagram Devghuraba Teknologi">
            <Icon name="tabler:brand-instagram" class="h-4 w-4" />
          </a>
          <a href="https://www.linkedin.com/company/devghuraba-teknologi" target="_blank" class="w-8 h-8 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors" aria-label="LinkedIn Devghuraba Teknologi">
            <Icon name="tabler:brand-linkedin" class="h-4 w-4" />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>